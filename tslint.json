{
    "extends": [
        "tslint:recommended",
        "tslint:latest",
        "tslint-react",
        "tslint-eslint-rules",
        "tslint-config-prettier",
        "tslint-react-hooks"
    ],
    "rules": {
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-implicit-dependencies": false,
        "no-relative-imports": false,
        "ordered-imports": false,
        "object-literal-sort-keys": false,
        "no-console": {
            "severity": "warning",
            "options": [
                "debug",
                "info",
                "log",
                "time",
                "timeEnd",
                "trace"
            ]
        }
    }
}